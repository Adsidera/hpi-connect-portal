<%= form_for faq do |f| %>

  <%= render 'shared/object_errors', object: faq %>

  <div class="panel panel-default">
    <ul class="list-group">
      <li class="list-group-item">
        <div class="row">
          <div class="col-sm-12">
                <%= f.label t("activerecord.attributes.faq.question", class: "control-label") %>
                <%= f.text_field :question, :class => "form-control" %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-sm-12" data-no-turbolink="true">
            <%= f.label t("activerecord.attributes.faq.answer", class: "control-label") %>
            <%= f.bootsy_area :answer, :rows => 10, :class => "col-md-12 form-control" %>
          </div>
        </div>
      </li>
    </ul>
  </div>

  <div class="actions">
    <%= f.submit t("links.save"), :class => "btn btn-warning pull-right" %>
  </div>

<% end %>
