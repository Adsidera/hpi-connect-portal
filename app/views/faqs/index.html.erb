<h1><%= t("faqs.headline") %></h1>
  
  <div class="container"> 
    <% @faqs.each do |faq| %>
      <div class="panel panel-default panel-body">
        <div class="container">
          <div class="col-md-11">
            <h4> <%= faq.question %> </h4>
            <br>
            <p> <%= faq.answer %> </p>
            <br>
            <% if signed_in? && can?(:update, faq) %>
              <%= link_to 'Edit', edit_faq_path(faq), :class => "btn btn-default" %>
            <% end %>
            <% if signed_in? && can?(:delete, faq) %>
              <%= link_to 'Destroy', faq, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default"%>
            <% end %>
            <br>
          </div>
        </div>
      </div>
    <% end %>
  </div> 

<div>
  <% if signed_in? && can?(:create, @faq) %>
    <%= link_to t("faqs.new"), new_faq_path, :class => "btn btn-default" %> 
  <% end %>
</div>