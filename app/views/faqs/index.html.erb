<h1><%= t("faqs.headline") %></h1>
<div>
  <% if signed_in? && can?(:create, @faq) %>
    <%= link_to t("faqs.new_faq"), new_faq_path, :class => "btn btn-success", :style => "margin-bottom: 20px" %> 
  <% end %>
</div>
<div class="container"> 
  <% @faqs.each do |faq| %>
    <div class="panel panel-default panel-body">
      <div class="container">
        <div class="col-md-11">
          <h4> <%= faq.question %> </h4>
          <br>
          <p> <%= faq.answer %> </p>
          <br>
          <% if signed_in? && can?(:update, faq) %>
            <%= link_to t("links.edit"), edit_faq_path(faq), :class => "btn btn-default btn-primary" %>
          <% end %>
          <% if signed_in? && can?(:delete, faq) %>
            <%= link_to t("links.destroy"), faq, method: :delete, data: { confirm: t("links.confirm")}, :class => "btn btn-default btn-danger"%>
          <% end %>
          <br>
        </div>
      </div>
    </div>
  <% end %>
</div>  