<%= form_for(@language) do |f| %>
  <% if @language.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@language.errors.count, "error") %> prohibited this language from being saved:</h2>

      <ul>
      <% @language.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br><%= mark_if_required(@language, :name) %>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% if Language.validators.map(&:class).include? ActiveRecord::Validations::PresenceValidator %>
    <div>
      <%= f.label t("layouts.asterisk_description") %>
    </div>
  <% end %>
<% end %>
