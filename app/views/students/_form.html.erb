<%= simple_form_for @student, :html => { :multipart => true, class: 'form-horizontal', role: 'form' } do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>
      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><h4><%= t("student.general_information") %></h4></h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :first_name, t("student.first_name"), class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :first_name, class: "form-control", type:"text" %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :last_name, t("student.last_name"), class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :last_name, class: "form-control", type:"text" %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :status, t("student.status"), class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.association :student_status, label: false, default: 1, input_html: { class: 'form-control' } %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :birthday, t("student.birthday"), class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :birthday, as: :string, label: false, input_html: { type: 'text', class: 'form-control datepicker' } %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :photo, t("student.photo"), class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <% if !@student.new_record? %>
              <%= image_tag(@student.photo.url, size: "150", class: "img-thumbnail")  %><br><br>
            <% end %>
            <%= f.file_field :photo, accept: 'image/jpeg,image/png,image/gif' %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :cv, t("student.cv"), class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <% if !@student.new_record? %>
              <% if (@student.cv.path).nil? || !File.file?(@student.cv.path) %>
                <%= image_tag('file_thumbnails/missing.png', size: "80") %>
              <% else %>
                <%= link_to(image_tag('file_thumbnails/pdf.png', size: "80"), @student.cv.url) %><br><br><%= File.basename(@student.cv.path); %>
              <% end %>
            <% end %>
            <br><br>
            <%= f.file_field :cv, accept: 'application/pdf' %>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><h4><%= t("student.carrier") %></h4></h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :academic_program, t("student.academic_program"), class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :academic_program, class: "form-control", type:"text" %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :semester, t("student.semester"), class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.number_field :semester, class: "form-control", type:"number" %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :education, t("student.education"), class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_area :education, class: "form-control", rows:"3" %>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><h4><%= t("student.additional_information") %></h4></h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.text_area :additional_information, class: "form-control", rows:"3" %>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Links</h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="form-group">
          <%= fa_icon "home 2x", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :homepage, class: "form-control", type:"text" %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= fa_icon "github-square 2x", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :github, class: "form-control", type:"text" %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= fa_icon "facebook-square 2x", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :facebook, class: "form-control", type:"text" %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= fa_icon "xing-square 2x", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :xing, class: "form-control", type:"text" %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= fa_icon "linkedin-square 2x", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :linkedin, class: "form-control", type:"text" %>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading"><h4><%= t("student.programming_languages") %></h4></div>
    <ul class="list-group">
      <%= fields_for :programming_languages do |f2| %>
        <% if @all_programming_languages %>
          <% @all_programming_languages.each do |programming_language| %>
            <li class="list-group-item">
              <div class="form-group">
                <%# Erstelle ein Label fuer jede Programmiersprache %>
                <%= f2.label programming_language.name, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                  <%# Schau nach, ob es bereits eine Angabe der Skill-Wertung fuer die Programmierspr. gibt %>
                  <% if !@student.new_record? %>
                    <% pl = ProgrammingLanguagesStudent.find_by_student_id_and_programming_language_id(@student.id,programming_language.id) %>
                  <% end %>
                  <%# Erzeuge 5 radio buttons fuer die Sterne %>
                  <% (1..5).each do |i| %>
                    <%# Falls es eine Angabe gibt, ueberpruefe, ob der aktuelle Stern der Angabe enspricht %>
                    <% if pl %>
                      <% if i == pl.skill %>
                        <%= f2.radio_button programming_language.id, i, :checked => "checked", :class=>"star" %>
                      <% else %>
                        <%= f2.radio_button programming_language.id, i, :class=>"star" %>
                      <% end %>
                    <%# Erzeuge sonst einen unchecked radio button %>
                    <% else %>
                      <%= f2.radio_button programming_language.id, i, :class=>"star" %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t("student.languages") %></h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :languages, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%=  collection_check_boxes(:student, :language_ids, Language.all, :id, :name) %>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="pull-right"><%= f.button :submit, t("links.save"), class: 'btn btn-warning' %></div>
<% end %>
