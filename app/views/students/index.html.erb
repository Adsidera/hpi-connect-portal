<div class="row">
  <div class="col-md-9">
    <h1><%= t("users.students_headline")%></h1>
      <% if !@users.empty? %>
        <ul class="list-group">
        <% @users.each do |student| %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-md-12">
                <%= link_to student.firstname+" "+student.lastname, student_path(student), :class => "h4" %>
                <% if user_can_promote_students? %>
                  <button class="btn btn btn-default promote" style="float:right" data-id="<%= student.id %>" data-toggle="modal" data-target="#myModal"><%= t('students.promote_button')%></button>
                <%end%>
              </div>
            </div>
          </li>
        <% end %>
        </ul>
        <div class="pull-right">
         <%= will_paginate @users, renderer: BootstrapPagination::Rails%>
        </div>
      <% else %>
        <div class="col-md-6 col-md-offset-3" style="margin-top:25%">
          <h4><%= t("students.no_results") %></h4>
        </div>
      <% end %>
  </div>
  <div class="col-md-3">
    <%= render 'studentsearch/search'%>
  </div>

</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%=t("students.promote_title")%></h4>
      </div>
      <div class="modal-body">
      <%= form_tag update_role_students_path, class: "form-inline" do %>
        <%= text_field_tag "student_id", nil %>
        <% promotion_rules = [] %>
        <% if user_is_deputy? %>
           <% promotion_roles = [[Role.find_by_level(2).name, 2], ["Deputy", 4]] %>
        <% else %>
           <% promotion_roles = [[Role.find_by_level(2).name, 2] , [Role.find_by_level(3).name,3], ["Deputy", 4]] %>
        <%end%>

        <%= select_tag :role_level, options_for_select(promotion_roles, Role.find_by_level(2).name), class: "form-control" %>
        <% if user_is_admin? %>
        <%= select_tag :employer_id, options_for_select(Employer.all.collect{|e| [e.name, e.id]}, :selected => nil), class: "form-control" %>
        <% end %>
        <%= submit_tag t('students.promote_button'), :data => {confirm: t('students.promote_confirm_question')}, :class => "btn btn-default change-role pull-right" %>
      <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


