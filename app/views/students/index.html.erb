<h1><%= t("students.students_headline")%></h1>

<table>
  <thead>
    <tr>
      <th><%= t("student.first_name")%></th>
      <th><%= t("student.last_name")%></th>
      <th><%= t("student.semester")%></th>
      <th><%= t("student.academic_program")%></th>
      <th><%= t("student.birthday")%></th>
      <th><%= t("student.education")%></th>
      <th><%= t("student.additional_information")%></th>
      <th><%= t("student.homepage")%></th>
      <th><%= t("student.github")%></th>
      <th><%= t("student.facebook")%></th>
      <th><%= t("student.xing")%></th>
      <th><%= t("student.linkedin")%></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.semester %></td>
        <td><%= student.academic_program %></td>
        <td><%= l(student.birthday) %></td>
        <td><%= student.education %></td>
        <td><%= student.additional_information %></td>
        <td><%= student.homepage %></td>
        <td><%= student.github %></td>
        <td><%= student.facebook %></td>
        <td><%= student.xing %></td>
        <td><%= student.linkedin %></td>
        <td><%= link_to t("links.show"), student %></td>
        <td><%= link_to t("links.edit"), edit_student_path(student) %></td>
        <td><%= link_to t("links.destroy"), student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("students.new_student"), new_student_path %>
