<ul class="list-group cv-entry-fields cv-work">
  <a class="btn btn-default cv-remove" data-id=".cv-work" href="#"><%= t("students.remove_work_experience") %></a>
  <li class="list-group-item">
    <div class="row">
      <div class="col-sm-3">
        <%= label_field form, :position, t("activerecord.attributes.cv_entry.position") %>
      </div>
      <div class="col-sm-9">
        <%= form.input :position %>
      </div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="row">
      <div class="col-sm-3">
        <%= label_field form, :employer, t("activerecord.attributes.cv_entry.employer") %>
      </div>
      <div class="col-sm-9">
        <%= form.input :employer %>
      </div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="row">
      <div class="col-sm-3">
        <%= label_field form, :start_date, t("activerecord.attributes.cv_entry.start_date") %>
      </div>
      <div class="col-sm-9">
        <%= form.input :start_date, discard_day: true, start_year: 1940 %>
      </div>
    </div>
  </li>
  <li class="list-group-item end-date-item" <%= raw('style="display: none;"') if form.object.current %>>
    <div class="row">
      <div class="col-sm-3">
        <%= label_field form, :end_date, t("activerecord.attributes.cv_entry.end_date") %>
      </div>
      <div class="col-sm-9">
        <%= form.input :end_date, discard_day: true, start_year: 1940 %>
      </div>
    </div>
  </li>
  <li class="list-group-item current-item">
    <div class="row">
      <div class="col-sm-3">
        <%= label_field form, :current, t("activerecord.attributes.cv_entry.current_job") %>
      </div>
      <div class="col-sm-9">
        <%= form.input :current %>
      </div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="row">
      <div class="col-sm-3">
        <%= label_field form, :description, t("activerecord.attributes.cv_entry.description") %>
      </div>
      <div class="col-sm-9">
        <%= form.input :description, input_html: { class: "tinymce" } %>
      </div>
    </div>
  </li>
</ul>