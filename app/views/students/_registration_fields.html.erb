<div class="panel panel-default">
  <div class="panel-heading"><h4><%= t("activerecord.attributes.user.login_information") %></h4></div>
    <ul class="list-group">
      <%= form.simple_fields_for :user, student.user do |user_form| %>
        <li class="list-group-item">
          <div class="row">
            <div class="col-sm-3">
              <%= label_field user_form, :firstname, t("activerecord.attributes.user.first_name") %>
            </div>
            <div class="col-sm-9">
              <div class="input select optional user_user_status">
                <%= user_form.input :firstname %>
              </div>
            </div>
          </div>
        </li>
        <li class="list-group-item">
          <div class="row">
            <div class="col-sm-3">
              <%= label_field user_form, :lastname, t("activerecord.attributes.user.lastname") %>
            </div>
            <div class="col-sm-9">
              <div class="input select optional user_user_status">
                <%= user_form.input :lastname %>
              </div>
            </div>
          </div>
        </li>
        <li class="list-group-item">
          <div class="row">
            <div class="col-sm-3">
              <%= label_field user_form, :email, t("activerecord.attributes.user.email") %>
            </div>
            <div class="col-sm-9">
              <div class="input select optional user_user_status">
                <%= user_form.input :email %>
              </div>
            </div>
          </div>
        </li>
        <li class="list-group-item">
          <div class="row">
            <div class="col-sm-3">
              <%= label_field user_form, :password, t("activerecord.attributes.user.password") %>
            </div>
            <div class="col-sm-9">
              <div class="input select optional user_user_status">
                <%= user_form.input :password %>
              </div>
            </div>
          </div>
        </li>
        <li class="list-group-item">
          <div class="row">
            <div class="col-sm-3">
              <%= label_field user_form, :password_confirmation, t("activerecord.attributes.user.password_confirmation") %>
            </div>
            <div class="col-sm-9">
              <div class="input select optional user_user_status">
                <%= user_form.input :password_confirmation %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
      <li class="list-group-item">
        <div class="row">
          <div class="col-sm-3">
            <%= label_field form, :semester, t("activerecord.attributes.user.semester") %>
          </div>
          <div class="col-sm-9">
            <div class="input select optional user_user_status">
              <%= form.input :semester %>
            </div>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-sm-3">
            <%= label_field form, :academic_program, t("activerecord.attributes.user.academic_program") %>
          </div>
          <div class="col-sm-9">
            <div class="input select optional user_user_status">
              <%= form.input :academic_program %>
            </div>
          </div>
        </div>
      </li>
    </ul>
</div>
