<h1>Listing user_statuses</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_statuses.each do |user_status| %>
      <tr>
        <td><%= user_status.name %></td>
         <td><%= link_to t("links.show"), user_status, :class => "btn btn-info" %></td>
        <td><%= link_to t("links.edit"), edit_user_status_path(user_status), :class => "btn btn-warning" %></td>
        <td><%= link_to t("links.destroy"), user_status, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

