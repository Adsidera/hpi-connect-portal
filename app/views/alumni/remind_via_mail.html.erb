<div class="wrapper-12 panel-wrapper">
  <h1> <%= t("users.remind") %> </h1>

  <%= form_tag mail_csv_alumni_index_path, method: :post, multipart: true do %>
    <div class="panel panel-default">
      <div class="panel-heading"><h4><%= t("alumni.send_mail_list") %></h4></div>
      <ul class="list-group">
        <li class="list-group-item">
          <div class="row">
            <div class="col-sm-3">
              <%= t("alumni.alumni_file") %>
            </div>
            <div class="col-sm-9">
              <div class="input select optional email_file">
                <%= file_field_tag 'email_file' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-3">
                <%= t("alumni.remind_all_alumni") %>
            </div>
            <div class="col-sm-9">
              <div class="input select optional email_file">
                <%= link_to t("alumni.remind_all_alumni"), remind_all_alumni_index_path, class: "btn", id:"remind-all-button" %>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <input type="submit" class="btn btn-primary pull-right" value="Email senden" />
    <br /><br />
  <% end %>
</div>
