<h1>Listing chairs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
			<th>Description</th>
			<th>Head of Chair</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @chairs.each do |chair| %>
      <tr>
        <td><%= chair.name %></td>
				<td><%= chair.description %></td>
				<td><%= chair.head_of_chair %></td>
        <td><%= link_to 'Show', chair, :type => "button", :class => "btn btn-primary" %>
            <%= link_to 'Edit', edit_chair_path(chair), :type => "button", :class => "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chair', new_chair_path, :type => "button", :class => "btn btn-default" %>
