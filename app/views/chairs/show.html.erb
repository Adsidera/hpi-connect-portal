<div class="row-fluid">
	<%= image_tag @chair.avatar.url(:medium), class: "img-thumbnail pull-left chair-thumbnail", alt: "Picture: "+@chair.name%>
  	<p>
		<strong>Name:</strong>
		<%= @chair.name %>
	</p>

	<p>
		<strong>Description:</strong>
		<%= @chair.description %>
	</p>

	<p>
		<strong>Head of Chair:</strong>
		<%= @chair.head_of_chair %>
	</p>

  <%= link_to 'Edit', edit_chair_path(@chair), :type => "button", :class => "btn btn-default" %>
  <%= link_to 'Back', chairs_path, :type => "button", :class => "btn btn-default" %>

</div>
