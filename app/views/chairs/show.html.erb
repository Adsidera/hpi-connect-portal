<div class="row">
    <%= image_tag @chair.avatar.url(:medium), class: "img-thumbnail pull-left chair-thumbnail", alt: "Picture: "+@chair.name%>
    <p>
        <strong><%= t("activerecord.attributes.chair.name") %>:</strong>
        <%= @chair.name %>
    </p>

    <p>
        <strong><%= t("activerecord.attributes.chair.description") %>:</strong>
        <%= @chair.description %>
    </p>

    <p>
        <strong><%= t("activerecord.attributes.chair.head_of_chair") %>:</strong>
        <%= @chair.head_of_chair %>
    </p>

    <p>
        <strong><%= t("activerecord.attributes.chair.deputy") %>:</strong>
        <%= @chair.deputy.email %>
    </p>

    <% if can? :edit, @chair %>
        <%= link_to t('links.edit'), edit_chair_path(@chair), :type => "button", :class => "btn btn-default" %>
    <% end %>
    <%= link_to t('links.back'), chairs_path, :type => "button", :class => "btn btn-default" %>

</div>
<div class="row">
    <div class="col-md-9">
        <%= render 'shared/user_list', name: "Staff", user_list: @research_assistants %>
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        <%= render 'shared/overview', name: "Open", job_offer_list: @open_job_offers %>
        <%= render 'shared/overview', name: "Running", job_offer_list: @running_job_offers %>
    </div>
    <div class="col-md-3">
        <%= render 'shared/sort_filter_search', find_path: find_jobs_chairs_path %>
    </div>
</div>
