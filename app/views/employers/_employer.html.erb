<li class="list-group-item">
  <div class="row">
    <div class="col-md-5">
      <% if can?(:activate, employer) || employer.paying? %>
        <h4><%= link_to employer.name, employer %></h4> 
      <% else %>
        <h4 class="h4"><%= employer.name %></h4>
      <% end %>
      <% unless employer.activated %>
        <span class="label label-danger"><%= t("employers.inactive")%></span>
      <% end %>
    </div>
    <% if current_user.present? && current_user.admin? %>
      <div class="col-md-1 pull-right">
        <%= link_to('<span class="glyphicon glyphicon-plus" title="Mitarbeiter hinzufÃ¼gen"></span>'.html_safe, new_staff_index_path(employer.token), class: "add-staff") %>
      </div>
    <% end %>
    <div class="col-md-3 pull-right">
      <%= image_tag employer.avatar.url, size: "100", class: "img-thumbnail"  %>
    </div>
  </div>
</li>