<li class="list-group-item">
  <div class="row">
    <div class="col-md-5">
      <% if can?(:activate, employer) || employer.paying? %>
        <h4><%= link_to employer.name, employer %></h4> 
      <% else %>
        <h4 class="h4"><%= employer.name %></h4>
      <% end %>
      <% if current_user && (current_user.student? || current_user.admin?) %>
        <% if employer.average_rating.nil? %>
          <% (1..5).each do |i| %>
            <%= radio_button_tag employer.id, i, false, disabled: true, class: "star" %>
          <% end %>
        <% else %>        
          <% (1..5).each do |i| %>
            <% if i == employer.average_rating.ceil && i != employer.average_rating %>
              <%= radio_button_tag employer.id, i, i==employer.average_rating.ceil, disabled: true, class: "star star-percent star-percent-#{((employer.average_rating-employer.average_rating.to_s.split(".")[0].to_f)*100).to_s.split(".")[0]}" %>
            <% else %>
              <%= radio_button_tag employer.id, i, i==employer.average_rating.ceil, disabled: true, class: "star" %>
            <% end %>
          <% end %>   
        <% end %>
        <%= !employer.average_rating.nil? ? "#{employer.average_rating} #{t("students.stars")}" : ""%>
        <%= "(#{employer.rating_amount} #{t("students.ratings")})" %> 
      <% end %>
      <% unless employer.activated %>
        <span class="label label-danger"><%= t("employers.inactive")%></span>
      <% end %>
    </div>
    <div class="col-md-7">
      <% if current_user && current_user.student? %>
        <a class="btn btn-sm toggleRating" href="#"><%= t("students.rate") %></a>
        <div class="ratingDiv", style = "display: none">
          <br>
          <%= simple_form_for :rating, url: rate_student_path(current_user.manifestation.id) do |f| %>  
            <% rating = EmployerRating.find_by_student_id_and_employer_id(current_user.manifestation.id,employer.id).nil? ? 0 : EmployerRating.find_by_student_id_and_employer_id(current_user.manifestation.id,employer.id).rating %>
            <% (1..5).each do |i| %>
              <% if i <= rating %>
                <%= f.radio_button employer.id, i, :checked => "checked", :class => "star" %>
              <% else %>
                <%= f.radio_button employer.id, i, :class => "star" %>
              <% end %>
            <% end %>            
            <%= f.hidden_field 'employer_id', :value => employer.id %>
            <%= hidden_field_tag 'id', current_user.id %>
            <div class="col-md-10 pull-right">
              <%= f.submit t("links.save"), class: "btn-default btn-sm" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 pull-right">
      <%= image_tag employer.avatar.url, size: "100", class: "img-thumbnail"  %>
    </div>
  </div>
</li>