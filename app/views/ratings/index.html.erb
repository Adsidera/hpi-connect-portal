<div class="wrapper-12 panel-wrapper">
  <span class="pull-left" id="top-links">
     <% if can?(:create, Rating) %>
      <%= link_to t("ratings.rate_now", employer: @employer.name), new_employer_rating_path, class: "btn btn-default title-button" %>
    <% end %>
  </span>
</div>

<div class="wrapper-12 teaser">
  <div class="col-md-12 list-container">
    <ul class="list-group list rating-list">
      <div class="row">
        <div class="col-sm-12">
          <%= render @ratings %>
        </div>
      </div>
    </ul>
    <div class="pull-right">
      <%= will_paginate @ratings, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

