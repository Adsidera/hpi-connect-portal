<%= simple_form_for @user, html: { multipart: true, class: 'form-horizontal', role: 'form' } do |f| %>

  <%= render 'shared/object_errors', object: @user %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><h4>Allgemeine Informationen</h4></h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :firstname, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :firstname %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :lastname, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :lastname %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :status, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.association :user_status, default: 1 %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :birthday, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :birthday, as: :string, input_html: { type: 'text', class: 'datepicker' } %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :photo, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <% if !@user.new_record? %>
              <%= image_tag(@user.photo.url, size: "150", class: "img-thumbnail")  %><br><br>
            <% end %>
            <%= f.file_field :photo, accept: 'image/jpeg,image/png,image/gif' %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :cv, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <% if !@user.new_record? %>
              <% if (@user.cv.path).nil? || !File.file?(@user.cv.path) %>
                <%= image_tag('file_thumbnails/missing.png', size: "80") %>
              <% else %>
                <%= link_to(image_tag('file_thumbnails/pdf.png', size: "80"), @user.cv.url) %><br><br><%= File.basename(@user.cv.path); %>
              <% end %>
            <% end %>
            <br><br>
            <%= f.file_field :cv, accept: 'application/pdf' %>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><h4>Karriere</h4></h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :academic_program, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :academic_program %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :semester, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :semester, as: :integer %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :education, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :education, input_html: { class: 'tinymce' } %>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><h4>Zus&auml;tzliche Informationen</h4></h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.input :additional_information, input_html: { class: 'tinymce' } %>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Links</h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="form-group">
          <%= fa_icon "home 2x", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.input :homepage %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= fa_icon "github-square 2x", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.input :github %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= fa_icon "facebook-square 2x", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.input :facebook %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= fa_icon "xing-square 2x", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.input :xing %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="form-group">
          <%= fa_icon "linkedin-square 2x", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.input :linkedin %>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading"><h4>Programmiersprachen</h4></div>
    <ul class="list-group">
      <%= fields_for :programming_languages do |f2| %>
        <% if @all_programming_languages %>
          <% @all_programming_languages.each do |programming_language| %>
            <li class="list-group-item">
              <div class="form-group">
                <%# Erstelle ein Label für jede Programmiersprache %>
                <%= f2.label programming_language.name, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                  <%# Schau nach, ob es bereits eine Angabe der Skill-Wertung für die Programmierspr. gibt %>
                  <% if !@user.new_record? %>
                    <% pl = ProgrammingLanguagesuser.find_by_user_id_and_programming_language_id(@user.userid,programming_language.id) %>
                  <% end %>
                  <%# Erzeuge 5 radio buttons für die Sterne %>
                  <% (1..5).each do |i| %>
                    <%# Falls es eine Angabe gibt, überprüfe, ob der aktuelle Stern der Angabe enspricht %>
                    <% if pl %>
                      <% if i == pl.skill %>
                        <%= f2.radio_button programming_language.id, i, checked: "checked", class:"star" %>
                      <% else %>
                        <%= f2.radio_button programming_language.id, i, class:"star" %>
                      <% end %>
                    <%# Erzeuge sonst einen unchecked radio button %>
                    <% else %>
                      <%= f2.radio_button programming_language.id, i, class:"star" %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Platzhalter f&uuml;r Sprachen</h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <div class="form-group">
          <%= f.label :languages, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= collection_check_boxes :user, :language_ids, Language.all, :id, :name %>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="pull-right"><%= f.button :submit, class: 'btn btn-warning' %></div>
<% end %>