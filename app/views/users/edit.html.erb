<%= form_for @user do |f| %>

    <h3><%= t("users.profile_headline") %></h3>
	
    <p><%= f.text_field :firstname %></p>
	<p><%= f.text_field :lastname %></p>
    <p><%= f.text_field :email %></p>

    <p><%= f.check_box :is_student %><%= t("users.is_student") %></p>

	<%= f.submit t("links.save") %>

<% end %>