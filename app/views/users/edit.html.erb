<%= simple_form_for @user do |f| %>

    <h3><%= t("users.profile_headline") %></h3>

    <p><%= f.input :firstname %></p>
	<p><%= f.input :lastname %></p>
    <p><%= f.input :email %></p>

    <p><%= f.collection_select :role_id, Role.all, :id, :name %></p>

	<%= f.submit t("links.save"), class: 'btn btn-primary' %>
<% end %>