<%= form_for(@job_offer) do |f| %>
  <% if @job_offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job_offer.errors.count, "error") %> prohibited this job_offer from being saved:</h2>

      <ul>
      <% @job_offer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
          <div class="field">
            <%= f.label t "job_offer.title" %><br>
            <%= f.text_field :title, :class => "form-control"%>
          </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= f.label t "job_offer.chair" %><br>
          <%= f.collection_select :chair_id, Chair.all, :id, :name, {prompt: "Select a Chair"}, {class: "form-control"} %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-11">
        <div class="field">
          <%= f.label t "job_offer.description" %><br>
          <%= f.text_area :description, :rows => 10, :class => "col-md-11", :placeholder => "Enter the description here", :class => "form-control" %>
        </div>
      </div>
    </div>

  <div class="row">
      <div class="col-md-6">
          <div class="field">
            <%= f.label t "job_offer.room_number" %><br>
            <%= f.text_field :room_number, :class => "form-control" %>
          </div>
    </div>
  </div>

    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= f.label t "job_offer.start_date" %><br>
          <%= f.text_field  :start_date, :class => 'datepicker form-control', :value => (@job_offer.start_date.blank? ? '' : @job_offer.start_date.strftime('%d-%m-%Y'))%>
        </div>
      </div>

      <div class="col-md-6">
        <div class="field">
          <%= f.label t "job_offer.end_date" %><br>
          <%= f.text_field :end_date, :class => 'datepicker form-control', :value => (@job_offer.end_date.blank? ? '' : @job_offer.end_date.strftime('%d-%m-%Y'))%>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= f.label t "job_offer.time_effort" %><br>
          <%= f.text_field :time_effort, :placeholder => "in hours/week", :class => "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= f.label t "job_offer.compensation" %><br>
          <%= f.text_field :compensation, :placeholder => "in â‚¬/hour", :class => "form-control" %>
        </div>
      </div>
      <% if @job_offer.persisted? && signed_in? && current_user == @job_offer.responsible_user %>
      <div class="col-md-6">
        <div class="field">
          <label>Responsible User</label><br>
         <%= collection_select(:responsible_user, :responsible_user_id, @job_offer.chair.research_assistants, :id, :email) %>
        </div>
      </div>

      <% end %>
    </div>
    <div class="row">
      <div class="field">
        <%= hidden_field_tag "job_offer[programming_language_ids][]", nil %>
        <% ProgrammingLanguage.all.each_with_index do |programming_language, index| %>
          <div class="col-md-2">
            <%= check_box_tag "job_offer[programming_language_ids][]", programming_language.id, @job_offer.programming_language_ids.include?(programming_language.id), id: dom_id(programming_language)%>
            <%= label_tag dom_id(programming_language), programming_language.name %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="field">
        <%= hidden_field_tag "job_offer[language_ids][]", nil %>
        <% Language.all.each do |language| %>
          <div class="col-md-2">
            <%= check_box_tag "job_offer[language_ids][]", language.id, @job_offer.language_ids.include?(language.id), id: dom_id(language) %>
            <%= label_tag dom_id(language), language.name %>
          </div>
        <% end %>

      </div>
    </div>

    <div class="actions">
      <%= f.submit t("helpers.links.save"), :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
