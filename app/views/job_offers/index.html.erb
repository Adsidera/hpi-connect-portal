<div class="row" style="width:50%">
  <div class="span9">
    <h2>Job Offers</h2>
  </div>
  <div class="span3">
    <%= link_to 'New Job offer', new_job_offer_path, :class => "btn btn-success", :style => "color: white; margin-top: 20px"%>
  </div>
</div>
<br>

<% len = @job_offers.length %>
<% @job_offers.each_with_index do |job_offer, index| %>
  
  <% if index == 0 %>
    <div class="jobList_top">
  <% elsif index+1 < len %>
    <div class="jobList_middle">
  <% else %>
    <div class="jobList_bottom">
  <%end%>

    <div class="row">
      <div class="span8 offset1">
        <h4><%= link_to job_offer.title, job_offer%></h4>
      </div>
      <div class="span3">
        <p class="startDate">starts <%= job_offer.start_date%></p>
      </div>
    </div>
    <div class="row">
      <div class="span10 offset2">
        <p class="chair"><%= job_offer.chair %></p>
      </div>
    </div>
  </div>
<%end%>