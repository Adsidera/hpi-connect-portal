
<h1>Job Offers </h1>

<div class="row">

  <div class="span8"> 
    <div class="row-fluid">

      <% len = @job_offers.length %>
      <% @job_offers.each_with_index do |job_offer, index| %>
       
        <% if len == 1 %>
          <div class="jobList_single">
        <%else %>
          <% if index == 0 %>
            <div class="jobList_top">
          <% elsif index+1 < len %>
            <div class="jobList_middle">
          <% else %>
            <div class="jobList_bottom">
          <%end%>
        <% end%>

          <div class="row">
            <div class="span8 offset1">
              <h4><%= link_to job_offer.title, job_offer%></h4>
            </div>
            <div class="span3">
              <p class="startDate">starts <%= job_offer.start_date%></p>
            </div>
          </div>
          <div class="row">
            <div class="span10 offset2">
              <p class="chair"><%= job_offer.chair %></p>
            </div>
          </div>
        </div>
      <%end%>
    </div><!--/.row -->
  </div><!--/.span -->

  <div class="span3">
    <div class="container-fluid ">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li>
            <%= form_tag( "/job_offers/sort", :method => :get, :id => 'Form' ) do %> 
            <%= label_tag :sort, "Date", :class => "radio inline " %>
            <%= radio_button_tag :sort_value, 'date' , false, :checked => @radio_button_sort_value["date"]  %>
            <%= label_tag :sort, 'Chair', :class => "radio inline" %>
            <%= radio_button_tag :sort_value, 'chair' , false, :checked => @radio_button_sort_value["chair"] %>     
            <%= submit_tag "Sort", :class => "btn" %>
            <% end %> 
          </li>
        </ul>
      </div><!--/.well -->
    </div> <!-- /container -->

    
    <div class="well sidebar-nav">
      <div class="container-fluid">
        <ul class="nav nav-list">
          <li class="filter">
            <%= form_tag( "/job_offers/filter", :method => :get, :id => 'Form') do %> 
              <div class="row">
                <div class="span5">
                  <%= label_tag :title %>
                </div>
                <div class="span7">
                  <%= text_field_tag :title , params.fetch(:title, '')%>
                </div>
              </div>
              <div class="row">
                <div class="span5">
                  <%= label_tag :description %>
                </div>
                <div class="span7">
                  <%= text_field_tag :description, params.fetch(:description, '') %>
                </div>
              </div>
              <div class="row">
                <div class="span5">
                  <%= label_tag :chair %>
                </div>
                <div class="span7">
                  <%= text_field_tag :chair, params.fetch(:chair, '')%>
                </div>
              </div>
              <div class="row">
                <div class="span5">
                  <%= label_tag :start_date %>
                </div>
                <div class="span7">
                  <%= text_field_tag  :start_date, params.fetch(:start_date, ''), :class => 'datepicker'%>
                </div>
              </div>
              <div class="row">
                <div class="span5">
                  <%= label_tag :end_date %>
                </div>
                <div class="span7">
                  <%= text_field_tag :end_date, params.fetch(:end_date, ''), :class => 'datepicker'%>
                </div>
              </div>
              <div class="row">
                <div class="span5">
                  <%= label_tag :time_effort %>
                </div>
                <div class="span7">
                  <%= text_field_tag :time_effort, params.fetch(:time_effort, '') %>
                </div>
              </div>
              <div class="row">
                <div class="span5">
                  <%= label_tag :compensation %>
                </div>
                <div class="span7">
                  <%= text_field_tag :compensation, params.fetch(:compensation, '') %>
                </div>
              </div>
              <div class="span3 offset9">
              <%= submit_tag "Filter", :class => "btn" %>
              </div>
            <% end %>
          </li>
        </ul>
      </div><!--/.well -->
    </div> <!-- /container -->


  </div> <!-- /span -->  

</div> <!-- /row -->

<div class="row">
  <div class="span8">
    <%= link_to 'New Job offer', new_job_offer_path, :class => "btn btn-success pull-right", :style => "color: white; margin-top: 20px"%>
  </div>
</div>

